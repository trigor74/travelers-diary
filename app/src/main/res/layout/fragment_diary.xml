<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/diary_note_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/diary_note_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="62dp"
                    android:paddingBottom="24dp"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.3">

                    <RelativeLayout
                        android:id="@+id/big_title_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/icons_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/diary_note_travel">

                            <ImageView
                                android:id="@+id/img_pin"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/ic_pin_white_48dp" />

                            <ImageView
                                android:id="@+id/img_clock"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_schedule_white_24dp" />
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/diary_note_big_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/icons_layout"
                            android:layout_toRightOf="@+id/icons_layout"
                            android:hint="@string/title"
                            android:imeOptions="actionDone|flagNoEnterAction"
                            android:inputType="textAutoCorrect|textCapSentences|textNoSuggestions|textMultiLine"
                            android:maxLines="5"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/diary_note_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/diary_note_big_title"
                            android:layout_alignStart="@+id/diary_note_big_title"
                            android:layout_below="@+id/diary_note_big_title"
                            android:layout_marginLeft="4dp"
                            android:text="Webnesday, Dec 15, 2015"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/diary_note_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/diary_note_date"
                            android:layout_alignStart="@+id/diary_note_date"
                            android:layout_below="@+id/diary_note_date"
                            android:layout_marginTop="4dp"
                            android:text="3:00 PM"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/diary_note_travel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/diary_note_time"
                            android:layout_alignStart="@+id/diary_note_time"
                            android:layout_below="@+id/diary_note_time"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_corners_green"
                            android:gravity="center_vertical"
                            android:paddingBottom="3dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:paddingTop="3dp"
                            android:text="Great Britain, London"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </FrameLayout>

                <include
                    android:id="@+id/diary_fragment_toolbar"
                    layout="@layout/toolbar_diary_activity" />
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/diary_note_app_bar"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <include
                android:id="@+id/rte_toolbar_container"
                layout="@layout/rte_toolbar" />

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/diary_note_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/rte_toolbar_container"
                android:layout_alignParentTop="true"
                android:fillViewport="true"
                android:scrollbarStyle="insideOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/rte_content" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/images_list"
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:clickable="true"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:scrollbars="horizontal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <include
                            android:id="@+id/warning"
                            layout="@layout/warning" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/diary_footer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:alpha=".1"
                            android:background="@color/black" />

                        <LinearLayout
                            android:id="@+id/diary_weather_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="16dp">

                            <ImageView
                                android:id="@+id/img_weather_icon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:alpha=".8"
                                android:src="@drawable/ic_place_black_24dp" />

                            <TextView
                                android:id="@+id/txt_weather_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/diary_location_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp"
                            android:paddingTop="16dp"
                            android:weightSum="12">

                            <ImageView
                                android:id="@+id/location_refresh_pin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:alpha=".6"
                                android:src="@drawable/ic_place_black_24dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="10"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_location_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:maxLines="1"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/txt_location_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:maxLines="2" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/location_drop_down"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:alpha=".8"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp" />
                        </LinearLayout>
                        <!-- MapFragment with lite mode enabled -->
                        <fragment
                            android:id="@+id/diary_note_map_fragment"
                            class="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            map:liteMode="true" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_edit_diary_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:src="@drawable/ic_edit_white_24dp"
            app:layout_anchor="@id/diary_note_app_bar"
            app:layout_anchorGravity="bottom|right|end" />
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>