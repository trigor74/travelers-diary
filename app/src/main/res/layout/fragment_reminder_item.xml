<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".75"
            android:background="@color/colorPrimary"
            android:padding="16dp">

            <TextView
                android:id="@+id/remind_item_travel_text_view"
                style="@style/DiaryHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel title"
                android:drawableRight="@drawable/drop_down_arrow"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <CheckBox
                android:id="@+id/remind_item_completed_checkbox"
                style="@style/DiaryHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/remind_item_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="afterDescendants"
            android:focusable="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_action_bar_splitter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="8dp">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/remind_item_remind_type_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="?attr/editTextBackground"
                android:visibility="visible" />

            <TextView
                android:id="@+id/remind_item_dont_remind_text_view"
                style="@style/ListItemPrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="16dp"
                android:background="?attr/editTextBackground"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/reminder_dont_remind_text"
                android:visibility="visible" />

            <TextView
                android:id="@+id/remind_item_date_text_view"
                style="@style/ListItemPrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="16dp"
                android:background="?attr/editTextBackground"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="01 JAN 2016"
                android:visibility="gone" />

            <TextView
                android:id="@+id/remind_item_waypoint_title_text_view"
                style="@style/ListItemPrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="16dp"
                android:background="?attr/editTextBackground"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Location title"
                android:visibility="gone" />

            <TextView
                android:id="@+id/remind_item_time_text_view"
                style="@style/ListItemPrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="16dp"
                android:background="?attr/editTextBackground"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="08:35:00 PM"
                android:visibility="gone" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/remind_item_waypoint_distance_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="16dp"
                android:background="?attr/editTextBackground"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
