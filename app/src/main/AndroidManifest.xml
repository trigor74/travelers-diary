<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.travelersdiary">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="d8d1756cffd2e4a36efbab0dcae68cdaf8c323d6" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".screens.login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".screens.main.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.travel.TravelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.diary.DiaryActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".screens.gallery.GalleryAlbumActivity"
            android:label="@string/albums"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.gallery.AlbumImagesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.diary.DiaryImagesActivity"
            android:label="@string/images"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.diary.FullScreenImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.reminder.ReminderItemActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".screens.preferences.PreferencesActivity"
            android:label="@string/settings"
            android:screenOrientation="portrait"
            android:theme="@style/SettingsTheme" />
        <activity
            android:name=".screens.travel.EditTravelActivity"
            android:screenOrientation="portrait" />

        <service android:name=".services.UploadPhotoService" />
        <service
            android:name=".services.SyncService"
            android:exported="false" />
        <service
            android:name=".services.GeocoderIntentService"
            android:exported="false" />
        <service
            android:name=".services.LocationTrackingService"
            android:exported="false" />
        <service
            android:name=".services.WeatherIntentService"
            android:exported="false" />
        <service
            android:name=".services.AlarmNotificationIntentService"
            android:exported="false" />
        <service
            android:name=".services.AlarmSetterService"
            android:exported="false" />
        <service
            android:name=".services.GeofenceSetterService"
            android:exported="false" />
        <service
            android:name=".services.ReminderOnBootSetterService"
            android:exported="false" />

        <receiver
            android:name=".services.ReminderOnBootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.REBOOT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.GeofenceTransitionsIntentService"
            android:exported="false" />

    </application>

</manifest>